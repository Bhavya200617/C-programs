#include<stdio.h>
int main()
{
int unit;
float bill;
printf("enter electricity units:");
scanf("%d",&unit);

if(unit<=50)
{
bill = unit * 0.50;
}
else if(unit<=150 && unit>50)
{
bill = unit * 0.75;
}
else if(unit<=250 && unit>150)
{
bill = unit * 1.20;
}
else 
{
bill = unit * 1.50;
}
printf("total electricity bill is %f",bill);

}
